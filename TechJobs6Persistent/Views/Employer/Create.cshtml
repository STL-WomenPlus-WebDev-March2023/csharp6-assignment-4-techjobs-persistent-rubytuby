@using TechJobs6Persistent.ViewModels
@model AddEmployerViewModel

<h1>Add New Employer</h1>

<form asp-controller="Employer" asp-action="ProcessCreateEmployerForm" method="post">

    <div class="form-group">
        <label for="Name">Employer Name</label>
        <input id="Name" class="form-control" name="Name" value=""/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>  

    <br />
        
    <div class="form-group">
        <label for="Location">Employer Location</label>
        <input id="Location" class="form-control" name="Location" value=""/>
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>
    
    <br />

    <input type="submit" value="Add Employer" />

</form>